{
  // General settings
  "workbench.settings.applyToAllProfiles": [],
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.allowForcePush": true,
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },

  // Font settings
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'liga'",
  "editor.fontFamily": "'MonoLisa', 'Cascadia Code'",
  "editor.fontWeight": "400",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.featureSettings": "\"liga\" on, \"calt\" on, \"ss08\" on",

  // Editor settings
  "editor.letterSpacing": -0.5,
  "editor.cursorBlinking": "expand",
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.scrollWithEditor": false,
  "editor.stickyScroll.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.lineNumbers": "off",
  "editor.guides.indentation": false,
  "editor.hover.delay": 1500,
  "editor.hover.enabled": true,
  "editor.matchBrackets": "never",
  "editor.colorDecorators": false,
  "editor.selectionHighlight": false,
  "editor.renderLineHighlight": "none",
  "editor.occurrencesHighlight": "off",
  "editor.hideCursorInOverviewRuler": true,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.emptySelectionClipboard": false,
  "files.trimTrailingWhitespace": true,
  "diffEditor.renderSideBySide": false,
  "editor.snippetSuggestions": "top",
  "editor.detectIndentation": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,

  // Terminal settings
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.scrollback": 500,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultLocation": "editor",

  // Files settings
  "files.exclude": {
    "**/node_modules": true
  },
  "workbench.list.smoothScrolling": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.iconTheme": "catppuccin noctis icons",
  "workbench.activityBar.location": "top",
  "workbench.navigationControl.enabled": false,
  "workbench.preferredDarkColorTheme": "Catppuccin Macchiato",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.tree.enableStickyScroll": false,
  "workbench.layoutControl.type": "menu",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  // Custom styling
  "vscode_custom_css.imports": [
    "file:///C:/Users/andrexcu/.vscode/custom.css",
    "file:///C:/Users/andrexcu/.vscode/vscode-script.js"
  ],

  // Catppuccin theme overrides
  "catppuccin.colorOverrides": {
    "macchiato": {
      "base": "#282C34",
      "mantle": "#21252B",
      "crust": "#181A1F",
      "rosewater": "#A5ADCB"
    }
  },
  "catppuccin.customUIColors": {
    "macchiato": {
      "quickInput.list.focusBackground": "#3A3D4A4D",
      "editor.background": "#1e1e1e",
      "editorGroup.emptyBackground": "#1E1F2933",
      "panel.background": "#282c34cc",
      "sideBar.background": "#14151800",
      "statusBar.background": "#21252bcc",
      "terminal.background": "#00000000",
      "statusBar.foreground": "rosewater",
      "titleBar.activeBackground": "#1E1F2933",
      "titleBar.activeForeground": "#CAD3F599",
      "actionBar.toggledBackground": "#383E4A",
      "activityBar.activeBackground": "#282C34",
      "activityBar.activeBorder": "#528BFF",
      "activityBar.activeFocusBorder": "#528BFF",
      "activityBar.background": "#1E1F2933",
      "activityBar.border": "#181A1F",
      "activityBar.dropBorder": "#528BFF",
      "activityBar.foreground": "#5f9ea0",
      "activityBar.inactiveForeground": "#7F848E",
      "activityBarBadge.background": "#61AFEF",
      "activityBarBadge.foreground": "#282C34",
      "tab.activeBorderTop": "#00000000",
      "tab.activeBorder": "#61AFEF",
      "tab.activeBackground": "#282C34",
      "tab.activeForeground": "#A0A7D3",
      "tab.activeModifiedBorder": "#E5C07B",
      "tab.border": "#61AFEF",
      "tab.hoverBackground": "#30343F33",
      "tab.hoverBorder": "#528BFF",
      "tab.hoverForeground": "#D7DAE0",
      "tab.inactiveBackground": "#21252B",
      "tab.inactiveForeground": "#7F848E",
      "tab.inactiveModifiedBorder": "#E5C07B",
      "tab.lastPinnedBorder": "#181A1F",
      "tab.unfocusedActiveBackground": "#282C34",
      "tab.unfocusedActiveBorder": "#3A3F4B",
      "tab.unfocusedActiveBorderTop": "#3A3F4B",
      "tab.unfocusedActiveForeground": "#7F848E",
      "tab.unfocusedActiveModifiedBorder": "#E5C07B",
      "tab.unfocusedHoverBackground": "#30343F",
      "tab.unfocusedHoverBorder": "#3A3F4B",
      "tab.unfocusedHoverForeground": "#7F848E",
      "tab.unfocusedInactiveBackground": "#21252B",
      "tab.unfocusedInactiveForeground": "#5C6370",
      "tab.unfocusedInactiveModifiedBorder": "#E5C07B",
      "tree.indentGuidesStroke": "#00000000",
      "tree.tableColumnsBorder": "#282C34",
      "tree.inactiveIndentGuidesStroke": "#3A3F4B",
      "button.background": "#3A3F4B",
      "button.foreground": "#FFFFFF",
      "button.hoverBackground": "#4F5666",
      "button.border": "#00000000",
      "button.secondaryBackground": "#282C34",
      "button.secondaryForeground": "#ABB2BF",
      "extensionButton.prominentBackground": "#4E5666",
      "extensionButton.prominentForeground": "#FFFFFF",
      "sideBar.border": "#00000000",
      "sideBarSectionHeader.border": "#00000000",
      "menu.background": "#1c2328",
      "menu.separatorBackground": "#CAD3F533",
      "menu.selectionBackground": "#A5ADCB22"
    }
  },

  // Catppuccin settings
  "catppuccin.accentColor": "rosewater",
  "catppuccin.boldKeywords": false,
  "catppuccin.workbenchMode": "minimal",

  // Window settings
  "window.title": "${rootName}",
  "window.titleBarStyle": "native",
  "window.density.editorTabHeight": "compact",
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "auto",
  "window.systemColorTheme": "dark",
  "window.autoDetectColorScheme": false,
  "catppuccin-noctis-icons.hidesExplorerArrows": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "security.workspace.trust.untrustedFiles": "open"
}
